{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h4>{{ 'Place creation'|trans }}</h4>
        <p>Attention: Le groupe doit être créé avant le lieu.</p>
        {{ form_start(form) }}
        {{ form_row(form.titlePlace, {'label': 'Lieu'}) }}    
        {{ form_row(form.infoActivePlace, {'label': 'Actif'}) }}    
        {{ form_row(form.groupsPlaces, {'label': 'Groupe'}) }}
        <input class="btn btn-success" type="submit" value="{{ 'Create'|trans }}" />
        {{ form_end(form) }}
        <a class="btn btn-success" href="{{ path('place_index') }}">{{ 'Back to the list'|trans }}</a>
    </div>
        
{% endblock %}
